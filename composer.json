{
    "name": "drewlabs/query",
    "description": "Provides an abstraction layer for writing query against datasource",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "keywords": [
        "query",
        "database"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Query\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Query\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2|^8.0",
        "drewlabs/collections": "^0.3",
        "drewlabs/contracts": "^0.3",
        "drewlabs/core-helpers": "^0.3",
        "drewlabs/query-contracts": "^0.3"
    },
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
